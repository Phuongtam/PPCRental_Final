@model PPC.Models.USER
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sign Up</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">

    <link href="~/Content/css/style3.css" rel="stylesheet" />

</head>


    <body>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="css/normalize.css">
        <link href='https://fonts.googleapis.com/css?family=Nunito:400,300' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="css/main.css">
        <form action="index.html" method="post">

            <h1>Sign Up</h1>

            <fieldset>
                <legend><span class="number">1</span>Your basic info</legend>
                <label for="name">Name:</label>
                @*<input type="text" id="name" name="user_name">*@
                @Html.TextBoxFor(Model => Model.FullName, new { @class = "form-input", @placeholder = "Full Name" })<br />
                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "form-input", @placeholder = "Full Name" })

                <label for="mail">Email:</label>
                <input type="email" id="mail" name="user_email">

                <label for="password">Password:</label>
                <input type="password" id="password" name="user_password">

            </fieldset>

            <button type="submit">Sign Up</button>
        </form>

    </body>
</html>


