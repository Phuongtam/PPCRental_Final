@model PPC.Models.PROPERTY

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AgencyLayout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "AgencyProperty", FormMethod.Post, new { id = "pform", enctype = "multipart/form-data" }))
{
    <h4>PROPERTY</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    <table class="table">
        <tr>
            <td>
                <div class="tkqs-city">

                    @Html.LabelFor(model => model.PropertyName, htmlAttributes: new { @class = "control-label col-md-2" })
